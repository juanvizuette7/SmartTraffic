# Kafka broker address used by all producers/consumers inside Docker
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Kafka topic carrying raw sensor events
RAW_TOPIC=raw_traffic_data

# RabbitMQ connection string and default credentials
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Baseline set of simulated zones
ZONE_IDS=Zone A,Zone B,Zone C

# Interval (seconds) for broadcasting the KTable snapshot
BROADCAST_INTERVAL_SECONDS=5

# Work-queue polling cadence and identifying info for query client
QUERY_INTERVAL_SECONDS=10
QUERY_CLIENT_ID=client_001
QUERY_ROUTE=Zone A|Zone C|Zone B
